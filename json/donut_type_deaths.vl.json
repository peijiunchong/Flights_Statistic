{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data.",
  "title": "",
  "background": "#f9f9f9",
  "width": 400,
  "height": 300,
  "data": {
    "values": [
      {"type": "crew", "value": 4029},
      {"type": "passenger", "value": 49251},
      {"type": "ground", "value": 4131}
    ]
  },
  "layer": [
    {"mark": {"type": "arc", "innerRadius": 50, "stroke": "#ffffff"}},
    {
      "mark": {"type": "text", "radiusOffset": 20, "size": 15},
      "encoding": {"text": {"field": "type", "type": "nominal"}}
    }
  ],
  "encoding": {
    "theta": {"field": "value", "type": "quantitative", "stack": true},
    "radius": {
      "field": "value",
      "scale": {"type": "symlog", "zero": true, "rangeMin": 20}
    },
    "color": {"field": "type", "type": "nominal", "title": "Type of Deaths", "legend": {"labelFontSize": 20, "titleFontSize": 20}},
    "tooltip": [
      {"field": "type", "type": "nominal"},
      {"field": "value", "type": "quantitative"}
    ]
  },
  "config": {"view": {"stroke": ""}}
}