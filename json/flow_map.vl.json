{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 600,
  "title": "Busiest Airport in 2018 according to Number of Flights",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/peijiunchong/Flights_Statistic/main/data/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/peijiunchong/Flights_Statistic/main/data/busiest_airport.csv"
      },
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"value":150},
        "color":{"value": "red"},
        "opacity": {"value": 0.5},
        "fill": {"value": "darkblue"},
        "tooltip": [
          {"field": "airport", "type": "nominal", "title": "Airport Name"},
          {"field": "city", "type": "nominal"},
          {"field": "country", "type": "nominal"},
          {"field": "iata", "type": "nominal"}
        ]
      }
    },
    {
      "data": {"url": "https://raw.githubusercontent.com/peijiunchong/Flights_Statistic/main/data/busiest_air_routes.csv"},
      "transform": [
        {
          "lookup": "origin",
          "from": {
            "data" : {
              "url": "https://raw.githubusercontent.com/peijiunchong/Flights_Statistic/main/data/busiest_airport.csv" 
            },
            "key": "iata",
            "fields": ["latitude", "longitude"]
          },
          "as": ["ori_latitude", "ori_longitude"]
        },
        {
          "lookup": "destination",
          "from":{
            "data":{
              "url": "https://raw.githubusercontent.com/peijiunchong/Flights_Statistic/main/data/busiest_airport.csv"
            },
            "key": "iata",
            "fields": ["latitude", "longitude"]
          },
          "as":["dest_latitude", "dest_longitude"]
        }
      ],
      "mark": "rule",
      "encoding": {
        "longitude": {"field": "ori_longitude", "type": "quantitative"},
        "latitude": {"field": "ori_latitude", "type": "quantitative"},
        "longitude2": {"field": "dest_longitude"},
        "latitude2": {"field": "dest_latitude"},
        "size": {"value": 4},
        "stroke": {"value": "black"},
        "strokeOpacity": {"value": 0.5},
        "tooltip": [
          {"field": "City 1", "type": "nominal"},
          {"field": "City 2", "type": "nominal"},
          {"field": "Flights", "type": "quantitative", "title": "Number of Flights"}
        ]
      }
    }
    
  ]
}